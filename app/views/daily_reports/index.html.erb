<%= link_to '新規作成', new_daily_report_path, class: 'btn btn-success my-3 form-control' %>

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">A</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">B</a>
  </li>
</ul>
<div class="tab-content">

  <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
    <table class="table">
    <tr>
    <th>タイトル</th>
    <th>日付</th>
    <th>投稿者</th>
    <th>コメント数</th>
    <th></th>
    </tr>
    <% @daily_reports.each do |daily|%>
        <% if daily.team == 'A' %>
                <tr>
                  <td><%= daily.title%></td>
                  <td><%= daily.date%></td>
                  <td><%= daily.username%></td>
                  <td><%= daily.comments.count%></td>
                  <td><%= link_to '詳細', daily_report_path(daily.id)%></td>
                </tr>
        <%end%>
    <%end%>
    </table>
  </div>


  <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab">
    <table class="table">
    <tr>
    <th>タイトル</th>
    <th>日付</th>
    <th>投稿者</th>
    <th>コメント数</th>
    <th></th>
    </tr>
    <% @daily_reports.each do |daily|%>
        <% if daily.team == 'B' %>
                <tr>
                  <td><%= daily.title%></td>
                  <td><%= daily.date%></td>
                  <td><%= daily.username%></td>
                  <td><%= daily.comments.count%></td>
                  <td><%= link_to '詳細', daily_report_path(daily.id)%></td>
                </tr>
        <%end%>
    <%end%>
    </table>
  </div>
</div>
